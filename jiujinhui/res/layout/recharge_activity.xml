<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="18238265015"
            android:textColor="#000000"
            android:textSize="21sp" />

        <zz.itcast.jiujinhui.view.CircleImageView
            android:id="@+id/circleImabeView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:border_color="@color/light"
            app:border_width="2dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/igray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="选择充值金额" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/igray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/wubai"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="500元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_wubai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yiqian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1000元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_yiqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/liangqian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2000元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_liangqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/wuqian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="5000元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_wuqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yiwan"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10000元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_yiwan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sanwan"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="30000元"
                android:textColor="#6699ff" />

            <ImageView
                android:id="@+id/iv_drink_checked_sanwan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ok"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/igray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingRight="10dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/igray" />

        <RelativeLayout
            
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shape_corners"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <EditText
                android:inputType="number"
                android:id="@+id/other_moneny"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:gravity="center_horizontal"
                android:hint="其他金额"
                android:padding="10dp"
                android:textColorHint="#6699ff"
                android:textColor="#6699ff"
               />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chongzhi"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_recharge_shape_corners" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="立即充值"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>