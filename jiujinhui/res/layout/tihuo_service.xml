<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="提货量(瓶):"
            android:textColor="#353535"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/product_ordsubmit_count_sub"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_reduce" />

        <EditText
            android:id="@+id/product_ordsubmit_count"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:inputType="number"
            android:text="1"
            android:textColor="#353535"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/product_ordsubmit_count_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/igray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
      android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="喝下去的是健康，留下来的是财富"
            android:textColor="#353535"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/igray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#353535"
            android:text="取消"
            android:background="@drawable/btn_gem_green"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/igray" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
              android:layout_margin="10dp"
            android:background="@drawable/btn_gem_green"
            android:text="确定"
            android:textColor="#ff3030"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>